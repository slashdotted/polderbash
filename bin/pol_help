echo "Available commands:"
echo "pol_help : this command :)"
echo "pol_forward : move forward one cell in the current direction"
echo "pol_clockwise : turn clockwise"
echo "pol_anticlockwise : turn anticlockwise"
echo "pol_persona : change your avatar"
echo "pol_say : say something (for example, answer a question)"
echo "pol_look : get what's in front of you"
echo "pol_info : get some information about your game"
echo "pol_savegame : get the current game state"
echo "pol_loadgame : restore a previous game state"

